    "lucide-react": "^0.464.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-i18next": "^15.0.1",
    "react-router-dom": "^6.28.0",
    "sonner": "^1.6.4",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
