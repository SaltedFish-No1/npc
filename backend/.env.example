PORT=4000
LLM_API_AUTH_TOKEN=dev-token
NPC_GATEWAY_KEY=dev-frontend-token
LLM_API_BASE=https://api.openai.com/v1
LLM_API_KEY=sk-xxxx
TEXT_MODEL_NAME=gpt-4o-mini
IMG_MODEL_NAME=dall-e-3
SESSION_STORE=memory
MOCK_LLM_RESPONSES=true
 
# --- Database Configuration ---
# DB_TYPE: postgres (vector retrieval required)
DB_TYPE=postgres
# DB_URL: Postgres connection string
DB_URL=postgres://user:pass@host:5432/dbname
# DB_POOL_SIZE: maximum connections
DB_POOL_SIZE=10
# DB_SCHEMA: Postgres schema (optional)
DB_SCHEMA=public
# SESSION_STORAGE_STRATEGY: database or memory
SESSION_STORAGE_STRATEGY=database
# REDIS_URL: Optional Redis connection URL for caching (e.g., redis://localhost:6379)
REDIS_URL=
# --- RAG / Embeddings ---
# EMBEDDING_MODEL_NAME: Embedding model name (e.g., text-embedding-3-large)
EMBEDDING_MODEL_NAME=
# EMBEDDING_DIM: Embedding vector dimensions (default 1536)
EMBEDDING_DIM=1536
# RAG_TOP_K: Top-K memory items to retrieve
RAG_TOP_K=8
# RAG_SCORE_THRESHOLD: Distance threshold (0~1) to filter noisy results
RAG_SCORE_THRESHOLD=0.25
